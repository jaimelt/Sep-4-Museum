<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".view.museum.rooms.RoomA3Activity">

    <ImageView
        android:id="@+id/room_a3_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/room_a3" />

    <TextView
        android:id="@+id/artwork_place_1"
        android:layout_width="62dp"
        android:layout_height="61dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:gravity="start"
        android:text="@string/position1"
        app:layout_constraintBottom_toBottomOf="@+id/room_a3_image"
        app:layout_constraintEnd_toEndOf="@+id/room_a3_image"
        app:layout_constraintHorizontal_bias="0.095"
        app:layout_constraintStart_toStartOf="@+id/room_a3_image"
        app:layout_constraintTop_toTopOf="@+id/room_a3_image"
        app:layout_constraintVertical_bias="0.425" />

    <TextView
        android:id="@+id/artwork_place_3"
        android:layout_width="62dp"
        android:layout_height="61dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:gravity="start"
        android:text="@string/position3"
        app:layout_constraintBottom_toBottomOf="@+id/room_a3_image"
        app:layout_constraintEnd_toEndOf="@+id/room_a3_image"
        app:layout_constraintHorizontal_bias="0.59"
        app:layout_constraintStart_toStartOf="@+id/room_a3_image"
        app:layout_constraintTop_toTopOf="@+id/room_a3_image"
        app:layout_constraintVertical_bias="0.425" />

    <TextView
        android:id="@+id/artwork_place_4"
        android:layout_width="62dp"
        android:layout_height="61dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:gravity="start"
        android:text="@string/position4"
        app:layout_constraintBottom_toBottomOf="@+id/room_a3_image"
        app:layout_constraintEnd_toEndOf="@+id/room_a3_image"
        app:layout_constraintHorizontal_bias="0.845"
        app:layout_constraintStart_toStartOf="@+id/room_a3_image"
        app:layout_constraintTop_toTopOf="@+id/room_a3_image"
        app:layout_constraintVertical_bias="0.425" />

    <TextView
        android:id="@+id/artwork_place_2"
        android:layout_width="62dp"
        android:layout_height="61dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:gravity="start"
        android:text="@string/position2"
        app:layout_constraintBottom_toBottomOf="@+id/room_a3_image"
        app:layout_constraintEnd_toEndOf="@+id/room_a3_image"
        app:layout_constraintHorizontal_bias="0.343"
        app:layout_constraintStart_toStartOf="@+id/room_a3_image"
        app:layout_constraintTop_toTopOf="@+id/room_a3_image"
        app:layout_constraintVertical_bias="0.425" />

    <ProgressBar
        android:id="@+id/progress_bar_roomA3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:foregroundGravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>