        android:contentDescription="@string/museum_content_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/room_b4" />

    <TextView
        android:id="@+id/artwork_place_1"
        android:layout_width="63dp"
        android:layout_height="61dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:gravity="start"
        android:text="@string/position1"
        app:layout_constraintBottom_toBottomOf="@+id/room_b4_image"
        app:layout_constraintEnd_toEndOf="@+id/room_b4_image"
        app:layout_constraintHorizontal_bias="0.235"
        app:layout_constraintStart_toStartOf="@+id/room_b4_image"
        app:layout_constraintTop_toTopOf="@+id/room_b4_image"
