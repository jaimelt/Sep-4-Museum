<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:gravity="top"
    android:orientation="vertical"
    android:id="@+id/artwork_details_layout">

    <TextView
        android:id="@+id/artwork_type_pop_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/artwork_type_text"
        android:gravity="center"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/artwork_image_pop_up"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="top"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp" />

    <LinearLayout
        android:id="@+id/first_layout"
        android:layout_width="match_parent"
        android:layout_height="120sp"
        android:layout_margin="1dp"
        android:background="@android:drawable/dialog_holo_dark_frame"
        android:gravity="top"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            >

            <TextView
                android:id="@+id/artwork_name_pop_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/name_artwork"
                android:gravity="start"
                android:layout_margin="2sp"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/artwork_author_pop_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/author_name"
                android:gravity="start"
                android:layout_margin="2sp"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </LinearLayout>


        <TextView
            android:id="@+id/artwork_description_pop_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2sp"
            android:text="@string/lorem_ipsum"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="italic" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/second_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:background="@android:drawable/dialog_holo_dark_frame"
        android:orientation="horizontal"
        android:padding="15dp">

        <ImageView
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:layout_weight="1"
            app:srcCompat="@drawable/humidity" />

        <TextView
            android:id="@+id/humidity_pop_up"
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/measurement_value" />

        <ImageView
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:layout_weight="1"
            app:srcCompat="@drawable/co2" />

        <TextView
            android:id="@+id/co2_pop_up"
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/measurement_value" />

        <ImageView
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:layout_weight="1"
            app:srcCompat="@drawable/light" />

        <TextView
            android:id="@+id/light_pop_up"
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/measurement_value" />

        <ImageView
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:layout_weight="1"
            app:srcCompat="@drawable/temperature" />

        <TextView
            android:id="@+id/temp_pop_up"
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/measurement_value" />

    </LinearLayout>

</LinearLayout>