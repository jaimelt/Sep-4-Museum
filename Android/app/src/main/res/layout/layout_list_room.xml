<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_layoutRoom"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            >

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackground"
                android:padding="30dp"
                android:text="Room 1"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />



            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/expandableLayout"
                android:layout_width="0dp"
                android:layout_height="300dp"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/titleTextView">



                <ImageView
                    android:id="@+id/lightId"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/humidityId"
                    app:srcCompat="@drawable/light" />

                <TextView
                    android:id="@+id/lightTextViewId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="18sp"
                    android:text="4000"
                    app:layout_constraintStart_toEndOf="@id/lightId"
                    app:layout_constraintTop_toBottomOf="@id/humidityTextViewID"/>
                <TextView
                    android:id="@+id/slashLight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:textSize="18sp"
                    android:text="/"
                    app:layout_constraintStart_toEndOf="@id/lightTextViewId"
                    app:layout_constraintEnd_toStartOf="@id/lightOptimalTextViewId"
                    app:layout_constraintTop_toBottomOf="@id/humidityOptimalTextViewID"/>
                <TextView
                    android:id="@+id/lightOptimalTextViewId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:textColor="#00FF00"
                    android:layout_marginLeft="20dp"
                    android:textSize="18sp"
                    android:text="4000"
                    app:layout_constraintStart_toEndOf="@id/lightTextViewId"
                    app:layout_constraintTop_toBottomOf="@id/humidityOptimalTextViewID"/>
                <TextView
                    android:id="@+id/measurementSignLight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="18sp"
                    android:text="(lm)"
                    app:layout_constraintStart_toEndOf="@id/lightOptimalTextViewId"
                    app:layout_constraintTop_toBottomOf="@id/humidityOptimalTextViewID"/>

                <ImageView
                    android:id="@+id/temperatureId"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    app:srcCompat="@drawable/temperature"
                    app:layout_constraintTop_toBottomOf="@id/co2ID"
                    app:layout_constraintEnd_toStartOf="@id/temperatureTextViewId"/>

                <TextView
                    android:id="@+id/temperatureTextViewId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="40dp"
                    android:textSize="18sp"
                    android:text="32"
                    app:layout_constraintEnd_toEndOf="@id/temperatureOptimalTextViewId"
                    app:layout_constraintTop_toBottomOf="@id/co2TextViewId" />
                <TextView
                    android:id="@+id/slashTemperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:textSize="18sp"
                    android:text="/"
                    app:layout_constraintStart_toEndOf="@id/temperatureTextViewId"
                    app:layout_constraintEnd_toStartOf="@id/temperatureOptimalTextViewId"
                    app:layout_constraintTop_toBottomOf="@id/slashCO2"/>
                <TextView
                    android:id="@+id/measurementSignTemperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="5dp"
                    android:textSize="18sp"
                    android:text="(C)"
                    app:layout_constraintStart_toEndOf="@id/temperatureOptimalTextViewId"
                    app:layout_constraintTop_toBottomOf="@id/co2OptimalTextViewId"/>
                <TextView
                    android:id="@+id/temperatureOptimalTextViewId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="45dp"
                    android:layout_marginTop="40dp"
                    android:textColor="#00FF00"
                    android:textSize="18sp"
                    android:text="29"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/co2TextViewId" />

                <ImageView
                    android:id="@+id/humidityId"
                    android:layout_width="50dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/humidity" />

                <TextView
                    android:id="@+id/humidityTextViewID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="10dp"
                    android:text="30"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/humidityId"
                    />
                <TextView
                    android:id="@+id/slashHumidity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:textSize="18sp"
                    android:text="/"
                    app:layout_constraintStart_toEndOf="@id/humidityTextViewID"
                    app:layout_constraintEnd_toStartOf="@id/humidityOptimalTextViewID"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:id="@+id/humidityOptimalTextViewID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#00FF00"
                    android:textSize="18sp"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp"
                    android:text="20"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/humidityTextViewID"
                    />
                <TextView
                    android:id="@+id/measurementSignHumidity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="10dp"
                    android:text="(%)"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/humidityOptimalTextViewID"
                    />

                <ImageView
                    android:id="@+id/co2ID"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="10dp"
                    app:srcCompat="@drawable/co2"
                    app:layout_constraintEnd_toStartOf="@id/co2TextViewId"
                    app:layout_constraintTop_toTopOf="parent">
                </ImageView>

                <TextView
                    android:id="@+id/co2TextViewId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="50dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/co2OptimalTextViewId"
                    android:text="300" />
                <TextView
                    android:id="@+id/slashCO2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textSize="18sp"
                    android:text="/"
                    app:layout_constraintStart_toEndOf="@id/co2TextViewId"
                    app:layout_constraintEnd_toStartOf="@id/co2OptimalTextViewId"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/co2OptimalTextViewId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="100"
                    android:textColor="#00FF00"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="5dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/measurementSignCO2"
                     />
                <TextView
                    android:id="@+id/measurementSignCO2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="(ppm)"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="15dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
                <TextView
                    android:id="@+id/roomCapacityTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:textSize="20sp"
                    android:text="Capacity:"
                    app:layout_constraintEnd_toStartOf="@id/roomCapacityValueTextView"
                    app:layout_constraintTop_toBottomOf="@id/lightId"/>
                <TextView
                    android:id="@+id/roomCapacityValueTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:textSize="20sp"
                    android:text="9"
                    app:layout_constraintEnd_toStartOf="@id/slashCapacity"
                    app:layout_constraintTop_toBottomOf="@id/lightId"/>
                <TextView
                    android:id="@+id/slashCapacity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="5dp"
                    android:textSize="20sp"
                    android:text="/"
                    app:layout_constraintEnd_toStartOf="@id/roomCapacityMaxValueTextView"
                    app:layout_constraintTop_toBottomOf="@id/lightId"/>

                    <TextView
                        android:id="@+id/roomCapacityMaxValueTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:textSize="20sp"
                        android:text="9"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/lightId"/>

                <TextView
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:text="Description :"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/lightId" />
                <TextView
                    android:id="@+id/descriptionContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:textSize="20sp"
                    android:textAlignment="viewStart"
                    android:text="No description..."
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/description"/>

                    <Button
                    android:id="@+id/editOptimalButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                        android:background="@drawable/button_background"
                    android:text="Edit"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <View
        android:id="@+id/toolbar_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="85dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:background="@color/grey" />
</RelativeLayout>