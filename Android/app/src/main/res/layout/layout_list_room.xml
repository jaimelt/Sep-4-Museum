<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_layoutRoom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary">

            <TextView
                android:gravity="center"
                android:id="@+id/titleTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackground"
                android:padding="30dp"
                android:text="@string/room"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/expandableLayout"
                android:layout_width="0dp"
                android:layout_height="300dp"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/titleTextView">


                <ImageView
                    android:id="@+id/lightId"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/humidityId"
                    app:srcCompat="@drawable/light" />

                <TextView
                    android:id="@+id/lightTextViewId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="40dp"
                    android:text="@string/measurement_value"
                    android:textSize="18sp"
                    app:layout_constraintStart_toEndOf="@id/lightId"
                    app:layout_constraintTop_toBottomOf="@id/humidityTextViewID" />

                <TextView
                    android:id="@+id/slashLight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:text="@string/backSlash"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toStartOf="@id/lightOptimalTextViewId"
                    app:layout_constraintStart_toEndOf="@id/lightTextViewId"
                    app:layout_constraintTop_toBottomOf="@id/humidityOptimalTextViewID" />

                <TextView
                    android:id="@+id/lightOptimalTextViewId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="40dp"
                    android:text="@string/measurement_value"
                    android:textColor="@color/optimalValue"
                    android:textSize="18sp"
                    app:layout_constraintStart_toEndOf="@id/lightTextViewId"
                    app:layout_constraintTop_toBottomOf="@id/humidityOptimalTextViewID" />

                <TextView
                    android:id="@+id/measurementSignLight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="40dp"
                    android:text="@string/light_unit"
                    android:textSize="18sp"
                    app:layout_constraintStart_toEndOf="@id/lightOptimalTextViewId"
                    app:layout_constraintTop_toBottomOf="@id/humidityOptimalTextViewID" />

                <ImageView
                    android:id="@+id/temperatureId"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintEnd_toStartOf="@id/temperatureTextViewId"
                    app:layout_constraintTop_toBottomOf="@id/co2ID"
                    app:srcCompat="@drawable/temperature" />

                <TextView
                    android:id="@+id/temperatureTextViewId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="40dp"
                    android:text="@string/measurement_value"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="@id/temperatureOptimalTextViewId"
                    app:layout_constraintTop_toBottomOf="@id/co2TextViewId" />

                <TextView
                    android:id="@+id/slashTemperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:text="@string/backSlash"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toStartOf="@id/temperatureOptimalTextViewId"
                    app:layout_constraintStart_toEndOf="@id/temperatureTextViewId"
                    app:layout_constraintTop_toBottomOf="@id/slashCO2" />

                <TextView
                    android:id="@+id/measurementSignTemperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="40dp"
                    android:text="@string/temperature_unit"
                    android:textSize="18sp"
                    app:layout_constraintStart_toEndOf="@id/temperatureOptimalTextViewId"
                    app:layout_constraintTop_toBottomOf="@id/co2OptimalTextViewId" />

                <TextView
                    android:id="@+id/temperatureOptimalTextViewId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="45dp"
                    android:text="@string/measurement_value"
                    android:textColor="@color/optimalValue"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/co2TextViewId" />

                <ImageView
                    android:id="@+id/humidityId"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="30dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/humidity" />

                <TextView
                    android:id="@+id/humidityTextViewID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="30dp"
                    android:text="@string/measurement_value"
                    android:textSize="18sp"
                    app:layout_constraintStart_toEndOf="@id/humidityId"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/slashHumidity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="@string/backSlash"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toStartOf="@id/humidityOptimalTextViewID"
                    app:layout_constraintStart_toEndOf="@id/humidityTextViewID"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/humidityOptimalTextViewID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="30dp"
                    android:text="@string/measurement_value"
                    android:textColor="@color/optimalValue"
                    android:textSize="18sp"
                    app:layout_constraintStart_toEndOf="@id/humidityTextViewID"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/measurementSignHumidity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="30dp"
                    android:text="@string/humidity_unit"
                    android:textSize="18sp"
                    app:layout_constraintStart_toEndOf="@id/humidityOptimalTextViewID"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/co2ID"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintEnd_toStartOf="@id/co2TextViewId"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/co2"/>

                <TextView
                    android:id="@+id/co2TextViewId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="50dp"
                    android:text="@string/measurement_value"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="@id/co2OptimalTextViewId"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/slashCO2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="5dp"
                    android:text="@string/backSlash"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toStartOf="@id/co2OptimalTextViewId"
                    app:layout_constraintStart_toEndOf="@id/co2TextViewId"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/co2OptimalTextViewId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="5dp"
                    android:text="@string/measurement_value"
                    android:textColor="@color/optimalValue"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toStartOf="@id/measurementSignCO2"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/measurementSignCO2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="15dp"
                    android:text="@string/co2_unit"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/roomCapacityTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    android:text="@string/capacity"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toStartOf="@id/roomCapacityValueTextView"
                    app:layout_constraintTop_toBottomOf="@id/lightId" />

                <TextView
                    android:id="@+id/roomCapacityValueTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    android:text="@string/measurement_value"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toStartOf="@id/slashCapacity"
                    app:layout_constraintTop_toBottomOf="@id/lightId" />

                <TextView
                    android:id="@+id/slashCapacity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="5dp"
                    android:text="@string/backSlash"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toStartOf="@id/roomCapacityMaxValueTextView"
                    app:layout_constraintTop_toBottomOf="@id/lightId" />

                <TextView
                    android:id="@+id/roomCapacityMaxValueTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:text="@string/measurement_value"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/lightId" />

                <TextView
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:text="@string/description_room"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/lightId" />

                <TextView
                    android:id="@+id/descriptionContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:text="@string/no_description"
                    android:textAlignment="viewStart"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/description" />

                <Button
                    android:id="@+id/editOptimalButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_background"
                    android:text="@string/edit"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/showRoomMeasurements"
                    app:layout_constraintStart_toStartOf="parent" />

                <Button
                    android:id="@+id/showRoomMeasurements"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_background"
                    android:text="@string/visualize"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/showRoomArtworks"
                    app:layout_constraintStart_toEndOf="@id/editOptimalButton" />

                <Button
                    android:id="@+id/showRoomArtworks"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_background"
                    android:text="@string/artworks"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/showRoomMeasurements" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <View
        android:id="@+id/toolbar_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="85dp"
        android:layout_marginRight="30dp"
        android:background="@color/grey" />
</RelativeLayout>